<Window x:Class="ImageComparator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageComparator"
        mc:Ignorable="d"
        Title="Image Comparator" Width="1005" Height="600" MinWidth="365" MinHeight="400" Closing="Window_Closing" WindowStartupLocation="CenterScreen" Icon="/Resources/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="350"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Name="fileMenuItem" Header="File">
                <MenuItem Name="saveResultsMenuItem" Header="Save Results..." Click="SaveResultsMenuItem_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/save_32.png" Width="24" Height="24"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="loadResultsMenuItem" Header="Load Results..." Click="LoadResultsMenuItem_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/folder_32.png" Width="24" Height="24"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Name="exitMenuItem" Header="Exit" Click="ExitMenuItem_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/close_32.png" Width="24" Height="24"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Name="optionsMenuItem" Header="Options">
                <MenuItem Name="searchFormatsMenuItem" Header="Search Formats">
                    <MenuItem Name="jpegMenuItem" Header="JPEG" IsCheckable="True" IsChecked="True"/>
                    <MenuItem Name="bmpMenuItem" Header="BMP" IsCheckable="True" IsChecked="True"/>
                    <MenuItem Name="pngMenuItem" Header="PNG" IsCheckable="True" IsChecked="True"/>
                    <MenuItem Name="gifMenuItem" Header="GIF" IsCheckable="True" IsChecked="True"/>
                    <MenuItem Name="tiffMenuItem" Header="TIFF" IsCheckable="True" IsChecked="True"/>
                    <MenuItem Name="icoMenuItem" Header="ICO" IsCheckable="True" IsChecked="True"/>
                </MenuItem>

                <MenuItem Name="deletionMethodMenuItem" Header="Deletion Method">
                    <MenuItem Name="sendToRecycleBinMenuItem" Header="Send To Recycle Bin" IsCheckable="True" IsChecked="True" IsEnabled="False" Click="SendToRecycleBinMenuItem_Click"/>
                    <MenuItem Name="deletePermanentlyMenuItem" Header="Delete Permanently" IsCheckable="True" IsChecked="False" Click="DeletePermanentlyMenuItem_Click"/>
                </MenuItem>

                <MenuItem Name="languageMenuItem" Header="Language">
                    <MenuItem Name="danishMenuItem" Header="Dansk" IsCheckable="True" IsChecked="False" Click="DanishMenuItem_Click"/>
                    <MenuItem Name="germanMenuItem" Header="Deutsch" IsCheckable="True" IsChecked="False" Click="GermanMenuItem_Click"/>
                    <MenuItem Name="englishMenuItem" Header="English" IsCheckable="True" IsChecked="True" IsEnabled="False" Click="EnglishMenuItem_Click"/>
                    <MenuItem Name="spanishMenuItem" Header="Español" IsCheckable="True" IsChecked="False" Click="SpanishMenuItem_Click"/>
                    <MenuItem Name="frenchMenuItem" Header="Français" IsCheckable="True" IsChecked="False" Click="FrenchMenuItem_Click"/>
                    <MenuItem Name="italianMenuItem" Header="Italiano" IsCheckable="True" IsChecked="False" Click="ItalianMenuItem_Click"/>
                    <MenuItem Name="dutchMenuItem" Header="Nederlands" IsCheckable="True" IsChecked="False" Click="DutchMenuItem_Click"/>
                    <MenuItem Name="norwegianMenuItem" Header="Norsk" IsCheckable="True" IsChecked="False" Click="NorwegianMenuItem_Click"/>
                    <MenuItem Name="polishMenuItem" Header="Polski" IsCheckable="True" IsChecked="False" Click="PolishMenuItem_Click"/>
                    <MenuItem Name="portugueseMenuItem" Header="Português (Brasil)" IsCheckable="True" IsChecked="False" Click="PortugueseMenuItem_Click"/>
                    <MenuItem Name="swedishMenuItem" Header="Svenska" IsCheckable="True" IsChecked="False" Click="SwedishMenuItem_Click"/>
                    <MenuItem Name="turkishMenuItem" Header="Türkçe" IsCheckable="True" IsChecked="False" Click="TurkishMenuItem_Click"/>
                    <MenuItem Name="russianMenuItem" Header="Русский" IsCheckable="True" IsChecked="False" Click="RussianMenuItem_Click"/>
                    <MenuItem Name="arabicMenuItem" Header="العربية" IsCheckable="True" IsChecked="False" Click="ArabicMenuItem_Click"/>
                    <MenuItem Name="hindiMenuItem" Header="हिन्दी" IsCheckable="True" IsChecked="False" Click="HindiMenuItem_Click"/>
                    <MenuItem Name="japaneseMenuItem" Header="日本語" IsCheckable="True" IsChecked="False" Click="JapaneseMenuItem_Click"/>
                    <MenuItem Name="chineseMenuItem" Header="简体中文" IsCheckable="True" IsChecked="False" Click="ChineseMenuItem_Click"/>
                    <MenuItem Name="koreanMenuItem" Header="한국어" IsCheckable="True" IsChecked="False" Click="KoreanMenuItem_Click"/>
                </MenuItem>

                <Separator />

                <MenuItem Name="includeSubfoldersMenuItem" Header="Include Subfolders" IsCheckable="True" IsChecked="True"/>
                <MenuItem Name="skipFilesWithDifferentOrientationMenuItem" Header="Skip Files With Different Orientation" IsCheckable="True" IsChecked="True"/>
                <MenuItem Name="findExactDuplicatesOnlyMenuItem" Header="Find Exact Duplicates Only" IsCheckable="True" IsChecked="False"/>

                <Separator />

                <MenuItem Name="clearFalsePositiveDatabaseButton" Header="Clear False Positive Database" Click="ClearFalsePositiveDatabaseButton_Click"/>
                <MenuItem Name="resetToDefaultsMenuItem" Header="Reset To Defaults" Click="ResetToDefaultsMenuItem_Click"/>
            </MenuItem>

            <MenuItem Name="helpMenuItem" Header="Help">
                <MenuItem Name="howToUseMenuItem" Header="How To Use" Click="HowToUseMenuItem_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/lightbulb_32.png" Width="24" Height="24"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="aboutMenuItem" Header="About" Click="AboutMenuItem_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/info_button_32.png" Width="24" Height="24"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="66*"/>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="54*"/>
                <ColumnDefinition Width="82*"/>
                <ColumnDefinition Width="83*"/>
                <ColumnDefinition Width="42*"/>
                <ColumnDefinition Width="41*"/>
                <ColumnDefinition Width="82*"/>
            </Grid.ColumnDefinitions>

            <Button Name="addFolderButton" Content="Add Folder" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Margin="5,5,0,0" Click="AddFolderButton_Click" Height="22"/>
            <Button Name="findDuplicatesButton" Content="Find Duplicates" Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="4" Margin="5,5,5,0" Click="FindDuplicatesButton_Click" IsVisibleChanged="FindDuplicatesButton_IsVisibleChanged"/>
            <Button Name="pauseButton" Content="Pause" Tag="0" Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="2" Visibility="Collapsed" Margin="5,5,0,0" Click="PauseButton_Click"/>
            <Button Name="stopButton" Content="Stop" Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="2" Visibility="Collapsed" Margin="5,5,5,0" Click="StopButton_Click"/>
            <Button Name="clearResultsButton" Content="Clear Results" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Visibility="Collapsed" Margin="5,5,0,0" Click="ClearButton_Click"/>
            <Button Name="applyButton" Content="Apply" Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="4" Visibility="Collapsed" Margin="5,5,0,0" Click="ApplyButton_Click"/>

            <ListView Name="listView1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Margin="5,5,0,0" ItemsSource="{Binding}" KeyDown="ListView1_KeyDown" MouseDoubleClick="ListView1_MouseDoubleClick" SelectionChanged="ListView1_SelectionChanged" ScrollViewer.ScrollChanged="ListView1_ScrollChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <BulletDecorator>
                                <BulletDecorator.Bullet>
                                    <Ellipse x:Name="Bullet" Height="10" Width="10"/>
                                </BulletDecorator.Bullet>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox x:Name="ListItemCheckBox" Grid.Column="0" IsChecked="{Binding isChecked, Mode=TwoWay}" IsEnabled="{Binding CheckboxEnabled, Mode=TwoWay}" Checked="ListView1_ListItemCheckBox_Checked" Unchecked="ListView1_ListItemCheckBox_Unchecked"></CheckBox>
                                    <TextBlock x:Name="ListItem" Grid.Column="1" Text="{Binding text}" Margin="3,0,0,0"/>
                                </Grid>
                            </BulletDecorator>
                        </Grid>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding confidence}" Value="0">
                                <Setter TargetName="Bullet" Property="Fill" Value="Green"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding confidence}" Value="1">
                                <Setter TargetName="Bullet" Property="Fill" Value="Yellow"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding confidence}" Value="2">
                                <Setter TargetName="Bullet" Property="Fill" Value="Red"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding confidence}" Value="3">
                                <Setter TargetName="Bullet" Property="Fill" Value="Blue"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding state}" Value="0">
                                <Setter TargetName="ListItem" Property="Background" Value="Transparent"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding state}" Value="1">
                                <Setter TargetName="ListItem" Property="Background" Value="Red"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding state}" Value="2">
                                <Setter TargetName="ListItem" Property="Background" Value="#FBC342"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ContextMenu>
                    <ContextMenu StaysOpen="true">
                        <ContextMenu.BitmapEffect>
                            <BitmapEffectGroup/>
                        </ContextMenu.BitmapEffect>
                        <MenuItem Name="listView1OpenMenuItem" Header="Open" Click="ListView1_OpenMenuItem_Click"/>
                        <MenuItem Name="listView1OpenFileLocationMenuItem" Header="Open File Location" Click="ListView1_OpenFileLocationMenuItem_Click"/>
                    </ContextMenu>
                </ListView.ContextMenu>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="IsSelected" Value="{Binding isSelected}"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <ListView Name="listView2" Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="4" Margin="5,5,5,0" ItemsSource="{Binding}" KeyDown="ListView2_KeyDown" MouseDoubleClick="ListView2_MouseDoubleClick" SelectionChanged="ListView2_SelectionChanged" ScrollViewer.ScrollChanged="ListView2_ScrollChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <BulletDecorator>
                                <BulletDecorator.Bullet>
                                    <Ellipse x:Name="Bullet" Height="10" Width="10"/>
                                </BulletDecorator.Bullet>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox x:Name="ListItemCheckBox" Grid.Column="0" IsChecked="{Binding isChecked, Mode=TwoWay}" IsEnabled="{Binding CheckboxEnabled, Mode=TwoWay}" Checked="ListView2_ListItemCheckBox_Checked" Unchecked="ListView2_ListItemCheckBox_Unchecked"></CheckBox>
                                    <TextBlock x:Name="ListItem" Grid.Column="1" Text="{Binding text}" Margin="3,0,0,0"/>
                                </Grid>
                            </BulletDecorator>
                        </Grid>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding confidence}" Value="0">
                                <Setter TargetName="Bullet" Property="Fill" Value="Green"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding confidence}" Value="1">
                                <Setter TargetName="Bullet" Property="Fill" Value="Yellow"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding confidence}" Value="2">
                                <Setter TargetName="Bullet" Property="Fill" Value="Red"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding confidence}" Value="3">
                                <Setter TargetName="Bullet" Property="Fill" Value="Blue"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding state}" Value="0">
                                <Setter TargetName="ListItem" Property="Background" Value="Transparent"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding state}" Value="1">
                                <Setter TargetName="ListItem" Property="Background" Value="Red"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding state}" Value="2">
                                <Setter TargetName="ListItem" Property="Background" Value="#FBC342"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ContextMenu>
                    <ContextMenu StaysOpen="true">
                        <ContextMenu.BitmapEffect>
                            <BitmapEffectGroup/>
                        </ContextMenu.BitmapEffect>
                        <MenuItem Name="listView2OpenMenuItem" Header="Open" Click="ListView2_OpenMenuItem_Click"/>
                        <MenuItem Name="listView2OpenFileLocationMenuItem" Header="Open File Location" Click="ListView2_OpenFileLocationMenuItem_Click"/>
                    </ContextMenu>
                </ListView.ContextMenu>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="IsSelected" Value="{Binding isSelected}"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <Button Name="deleteSelectedButton" Content="Delete Selected" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Margin="5,5,0,0" IsEnabled="False" Click="DeleteSelectedButton_Click"/>
            <Button Name="removeFromListButton" Content="Remove From List" Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="2" Margin="5,5,0,0" IsEnabled="False" Click="RemoveFromListButton_Click"/>
            <Button Name="clearButton" Content="Clear" Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="3" Margin="5,5,5,0" Click="ClearButton_Click"/>
            <Button Name="markForDeletionButton" Content="Mark For Deletion" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Margin="5,5,0,0" IsEnabled="False" Click='MarkForDeletionButton_Click'/>
            <Button Name="markAsFalsePositiveButton" Content="Mark As False Positive" Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="2" Margin="5,5,0,0" IsEnabled="False" Click='MarkAsFalsePositiveButton_Click'/>
            <Button Name="removeMarkButton" Content="Remove Mark" Grid.Row="3" Grid.Column="7" Grid.ColumnSpan="3" Margin="5,5,5,0" IsEnabled="False" Click='RemoveMarkButton_Click'/>
            <ProgressBar Name="progressBar" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="10" Margin="5,5,5,0" Height="20"/>
            <ListView Name="outputListView" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="10" Margin="5,5,5,5" AllowDrop="True" DragEnter="OutputListView_DragEnter" Drop="OutputListView_Drop"/>
        </Grid>

        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext"/>

        <Border Grid.Row="1" Grid.Column="2" Margin="5,5,5,5" BorderThickness="1" BorderBrush="#FFABADB3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Name="previewImageBorder1" Grid.Row="0" Margin="5,5,5,0" IsManipulationEnabled="True" ClipToBounds="True" ManipulationDelta="PreviewImageBorder_ManipulationDelta">
                            <Image Name="previewImage1" RenderTransformOrigin="0.5,0.5" MouseWheel="PreviewImage_MouseWheel" MouseLeftButtonDown="PreviewImage1_MouseLeftButtonDown" MouseMove="PreviewImage1_MouseMove" MouseLeftButtonUp="PreviewImage1_MouseLeftButtonUp"/>
                        </Border>
                        <Label Name="informationLabel1" Grid.Row="1" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Name="previewImageBorder2" Grid.Row="0" Margin="5,0,5,5" IsManipulationEnabled="True" ClipToBounds="True" ManipulationDelta="PreviewImageBorder_ManipulationDelta">
                            <Image Name="previewImage2" RenderTransformOrigin="0.5,0.5" MouseWheel="PreviewImage_MouseWheel"  MouseLeftButtonDown="PreviewImage2_MouseLeftButtonDown"  MouseMove="PreviewImage2_MouseMove"  MouseLeftButtonUp="PreviewImage2_MouseLeftButtonUp"/>
                        </Border>
                        <Label Name="informationLabel2" Grid.Row="1" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <Label Name="previewLabel" Content="Select a file to preview:" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>

                <Border Grid.Row="0" Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Name="zoomInButton" Content="+" Grid.Row="0" Margin="5,5,5,5" Width="25" Height="25" Opacity="0.5" Click="ZoomInButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Grid>
                                        <Ellipse Stroke="Black"/>
                                        <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Name="zoomOutButton" Content="-" Grid.Row="1" Margin="5,5,5,5" Width="25" Height="25" Opacity="0.5" Click="ZoomOutButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Grid>
                                        <Ellipse Stroke="Black"/>
                                        <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
