<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ImageComparator.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageComparator"
        mc:Ignorable="d"
        Title="About" Height="420" Width="520" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Application Name -->
        <TextBlock Grid.Row="0" Text="Image Comparator" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Version -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <TextBlock Name="versionLabel" Text="Version:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
            <TextBlock Text="1.0.0" FontSize="14"/>
        </StackPanel>

        <!-- License -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <TextBlock Name="licenseLabel" Text="License:" FontSize="14" FontWeight="SemiBold" Margin="0,0,5,0"/>
            <TextBlock Text="GPL-3.0" FontSize="14"/>
        </StackPanel>

        <!-- Copyright -->
        <TextBlock Grid.Row="3" Name="copyrightText" Text="Copyright Â© 2026" FontSize="13" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <!-- Description -->
        <TextBlock Grid.Row="4" Name="descriptionText" TextWrapping="Wrap" FontSize="13" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,15,0,0" MaxWidth="420"/>

        <!-- Developer Info -->
        <StackPanel Grid.Row="5" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,15">
            <TextBlock Name="developerText" TextWrapping="Wrap" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Margin="0,5,0,0">
                <Run Text="GitHub: " FontSize="12" Foreground="Gray"/>
                <Hyperlink Name="githubLink" NavigateUri="https://github.com/bahadirsenel/ImageComparator" RequestNavigate="GithubLink_RequestNavigate" FontSize="12">
                    <Run Text="github.com/bahadirsenel/ImageComparator"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Spacer -->
        <Border Grid.Row="6"/>

        <!-- Close Button -->
        <Button Name="closeButton" Content="Close" Grid.Row="7" Margin="0,10,0,0" Height="35" Width="120" HorizontalAlignment="Center" Click="CloseButton_Click" FontSize="14" Style="{StaticResource ModernButtonStyle}"/>
    </Grid>
</Window>
