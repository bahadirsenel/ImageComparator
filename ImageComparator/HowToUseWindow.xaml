<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ImageComparator.HowToUseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageComparator"
        mc:Ignorable="d"
        Title="How To Use" Height="600" Width="700" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Margin="10" VerticalScrollBarVisibility="Auto">
            <TextBlock Name="contentTextBlock" TextWrapping="Wrap" FontSize="13" LineHeight="22" Padding="10">
                <!-- Content will be set in code-behind -->
            </TextBlock>
        </ScrollViewer>

        <Button Name="closeButton" Content="Close" Grid.Row="1" Margin="10" Height="30" Width="100" HorizontalAlignment="Center" Click="CloseButton_Click" Style="{StaticResource ModernButtonStyle}"/>
    </Grid>
</Window>
